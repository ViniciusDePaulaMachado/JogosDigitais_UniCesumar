Algoritmo "se"

Var
  numero, resultado : inteiro

Inicio

      escreva("Digite um numero inteiro: ")
      leia(numero)
      
      se(numero mod 2 = 0) entao
           escreva("A metade do numero é: ", (numero / 2))
      senao
           escreval("O Numero é impar")
      fimse


Fimalgoritmo